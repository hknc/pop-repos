{
  "name": "pop-repos",
  "version": "1.0.0",
  "description": "A backend application for discovering popular repositories on GitHub.",
  "main": "index.js",
  "author": "Hakan Cevirgen",
  "license": "MIT",
  "scripts": {
    "build": "tsc --project ./",
    "start:dev": "nodemon --config nodemon.json src/server.ts",
    "start:debug": "nodemon --config nodemon.json --inspect-brk src/server.ts",
    "start:production": "node dist/server.js",
    "lint": "eslint '*/**/*.{js,ts,tsx}' --quiet --fix",
    "test": "jest",
    "test:watch": "jest --watch --forceExit --detectOpenHandles",
    "coverage": "jest --coverage"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dayjs": "^1.10.4",
    "dotenv": "^8.2.0",
    "envalid": "^7.1.0",
    "express": "^4.17.1",
    "express-joi-validation": "^5.0.0",
    "helmet": "^4.4.1",
    "ioredis": "^4.25.0",
    "joi": "^17.4.0",
    "tslog": "^3.1.2"
  },
  "devDependencies": {
    "@types/compression": "^1.7.0",
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.11",
    "@types/ioredis": "^4.22.2",
    "@types/jest": "^26.0.22",
    "@types/node": "^14.14.37",
    "@types/redis-mock": "^0.17.0",
    "@types/supertest": "^2.0.11",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.20.0",
    "@typescript-eslint/parser": "^4.20.0",
    "eslint": "^7.23.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^6.0.0",
    "i": "^0.3.6",
    "ioredis-mock": "^5.4.1",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "nock": "^13.0.11",
    "nodemon": "^2.0.7",
    "npm": "^7.8.0",
    "prettier": "^2.2.1",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix"
    ]
  }
}
